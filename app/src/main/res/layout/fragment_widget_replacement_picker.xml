<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true">

    <include
        android:id="@+id/widget_replacement_picker_search"
        layout="@layout/include_search"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_box_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/widget_replacement_picker_loading_progress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:indeterminate="true"
        app:layout_constraintBottom_toTopOf="@id/widget_replacement_picker_loading_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:trackCornerRadius="4dp"
        app:trackThickness="8dp" />

    <TextView
        android:id="@+id/widget_replacement_picker_loading_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:text="@string/widget_replacement_picker_loading"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.PixelLauncherMods"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/widget_replacement_picker_loading_progress" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/widget_replacement_picker_loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="widget_replacement_picker_loading_label,widget_replacement_picker_loading_progress" />

    <com.kieronquinn.app.pixellaunchermods.ui.views.LifecycleAwareRecyclerView
        android:id="@+id/widget_replacement_picker_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/search_box_margin"
        android:clipToPadding="false"
        android:paddingTop="@dimen/search_box_margin"
        android:paddingBottom="@dimen/margin_16"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/widget_replacement_picker_loaded"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="widget_replacement_picker_search,widget_replacement_picker_recyclerview" />

</androidx.constraintlayout.widget.ConstraintLayout>