<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/app_icon"
        android:adjustViewBounds="true"
        android:layout_width="@dimen/item_app_width"
        android:layout_height="@dimen/item_app_width"
        android:paddingStart="@dimen/item_app_icon_padding_normal"
        android:paddingTop="@dimen/item_app_icon_padding_normal"
        android:paddingEnd="@dimen/item_app_icon_padding_normal"
        android:paddingBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:stateListAnimator="@animator/zoom_in_animator"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/app_label"
        android:layout_width="@dimen/item_app_width"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="@dimen/margin_4"
        android:paddingEnd="@dimen/margin_4"
        android:paddingBottom="@dimen/item_app_icon_padding_normal"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.PixelLauncherMods.Medium"
        tools:text="@string/app_name" />

</LinearLayout>