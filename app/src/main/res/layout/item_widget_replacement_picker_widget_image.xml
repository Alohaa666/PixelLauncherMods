<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_8"
    android:paddingBottom="@dimen/margin_8"
    android:clickable="true"
    android:focusable="true"
    android:background="?selectableItemBackground">

    <Space
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/item_widget_replacement_picker_widget_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingStart="@dimen/margin_16"
        android:paddingEnd="@dimen/margin_16"
        android:scaleType="fitCenter"
        app:layout_constraintHeight_max="86dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_widget_replacement_picker_widget_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/margin_16"
        android:paddingTop="@dimen/margin_16"
        android:paddingEnd="@dimen/margin_16"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.PixelLauncherMods"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/item_widget_replacement_picker_widget_image"
        tools:text="Widget Name" />

    <TextView
        android:id="@+id/item_widget_replacement_picker_widget_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="@dimen/margin_16"
        android:paddingTop="4dp"
        android:paddingEnd="@dimen/margin_16"
        android:textAppearance="@style/TextAppearance.AppCompat.Small.PixelLauncherMods"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/item_widget_replacement_picker_widget_label"
        tools:text="Widget Description" />

</androidx.constraintlayout.widget.ConstraintLayout>